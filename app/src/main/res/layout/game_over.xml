<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:layout_marginTop="20dp"

        android:orientation="horizontal">

        <ImageButton
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="290dp"
            android:background="@drawable/restart"
            android:onClick="restart" />

        <ImageButton
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:background="@drawable/exit"
            android:onClick="Close"
            android:layout_marginRight="10dp"/>


    </LinearLayout>


    <TableLayout
        android:layout_width="150dp"
        android:layout_height="196dp"
        android:orientation="vertical"
        android:layout_gravity="center">


        <ImageView
            android:id="@+id/trophy_highest"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/trophy"
            android:visibility="gone"
            android:layout_gravity="top"/>


    </TableLayout>


    <TableLayout
        android:layout_width="280dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">
        <TableRow
            android:layout_width="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kenneyfuturesquare"
                android:gravity="center"
                android:text="Name"
                android:textColor="#855525"
                android:textSize="34sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kenneyfuturesquare"
                android:text="Your Points: "
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/high_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kenney_blocks"
                android:text="50"
                android:gravity="center"
                android:textColor="#0B0855"
                android:textSize="50sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:layout_width="50dp"
                android:layout_height="47dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/kenneyfuturesquare"
                android:text="High Score: "
                android:textColor="@color/white"
                android:textSize="26sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/NewHighest"
                android:layout_width="108dp"
                android:layout_height="47dp"
                android:fontFamily="@font/kenney_blocks"
                android:text="100"
                android:textColor="#F4B533"
                android:gravity="center"
                android:textSize="34sp" />
        </TableRow>
    </TableLayout>

    <View
        android:layout_width="90dp"
        android:layout_height="82dp"
        android:layout_gravity="center"
        android:background="@drawable/furball" />
</LinearLayout>
